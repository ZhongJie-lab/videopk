<div class="row">
  <div>
    <h4 class="text-center"><%= @battle.title %></h4>
    <br>
      <%= simple_form_for([@battle, @battle_comment]) do |f| %>

          <%= f.input :comment, label: false, class: "form-control", :input_html => {:rows => 5, :placeholder => "请评论视频~"} %>

      <div class="form-actions text-center">
        <%= f.button :submit, value = "提交", class: "btn btn-success", style: "width:60%;background-color:#74d4b3;" %>
      </div>
      <% end %>
  </div>
</div>
