<div class="col-md-12">
  <h2> <%= @battle.title %> - 评论列表 </h2>

  <hr>

  <table class="table table-boldered table-striped custab">
      <thead>
          <td>发布者</td>
          <td>评论内容</td>
          <td>发布日期</td>
          <td>操作选项</td>
      </thead>
      <% @comments.each do |c| %>
      <tr>
          <td><%= c.user.email %></td>
          <td>
              <%= simple_format(c.comment) %>
          </td>
          <td><%= c.created_at %></td>
          <td>
              <%= link_to edit_admin_battle_battle_comment_path(@battle, c), class: 'btn btn-info btn-xs' do %>
              <i class="fa fa-pencil"></i><% end %>
              <%= link_to admin_battle_battle_comment_path(@battle, c), :method => :delete, :data => {:confirm => "确定删除评论吗?" }, class: 'btn btn-danger btn-xs' do %>
              <i class="fa fa-trash-o"></i>
              <% end %>
          </td>
      </tr>
      <% end %>
  </table>

  <div class="pull-right" style="margin-top: 10px; margin-bottom:10px;">
    <%= link_to "返回", admin_battles_path, class: "btn btn-primary" %>
  </div>

</div>
