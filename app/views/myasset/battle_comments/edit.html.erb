<div class="col-md-4 col-md-offset-4" style="margin: auto;">
    <div class="form-group" style="width: 500px;">
        <h2>
            更新评论
        </h2>
    </div>

    <div class="form-group" style="width: 800px; ">
        <%= simple_form_for ([:admin, @battle, @battle_comment]) do |f| %>
        <div class="group">
            <%= f.input :comment, :label => "评论内容" %>
        </div>

        <%= f.submit "提交" , disable_with: "Submiting...", class: "btn btn-primary" %>
        <%= link_to "取消", admin_battle_battle_comments_path, class: "btn btn-primary"%>
    </div>
    <% end %>

</div>
